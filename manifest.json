{
  "manifest_version": 1,
  "name": "ÄŒekiraj",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
    "host_permissions": [
    "<all_urls>"  // This allows the extension to access any URL, you can restrict it if needed
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Adjust this to the specific domains you want
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
}
