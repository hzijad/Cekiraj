{
  "manifest_version": 1,
  "name": "ÄŒekiraj",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
    "host_permissions": [
    "<all_urls>"  // Allows the extension to access any URL, can be restrictable
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Add for our domains
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}

