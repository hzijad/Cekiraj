{
  "manifest_version": 3,
  "name": "Čekiraj",
  "version": "1.2.1",
  "description": "Čekiraj je ekstenzija koja provjerava nivo pouzdanosti različitih web stranica sa vijestima.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "64": "images/logo64.png",
    "128": "images/logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>" 
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/green-checkmark.png",
        "images/yellow-checkmark.png",
        "images/red-checkmark.png",
        "images/logo.png",
        "images/warning-sign.png" 
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
  ]
}